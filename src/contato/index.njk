<!-- FORMULARIO -->
<section
  class="w-full h-auto text-black xl:px-24 px-4 md:py-24 py-16 flex flex-col justify-center items-center text-center bg-white">
  <form id="form" class="w-full max-w-2xl">
    <div class="flex flex-col items-center gap-5 mb-12">
      <span class="text-2xl text-gray-800">CONTATO</span>
      <span class="text-4xl font-bold text-gray-800">Vamos conversar</span>
      <span class="text-xs text-gray-800">A Soal está disponível para você. Fale conosco.</span>
    </div>

    <label class="block text-gray-600" for="nome">Nome:*</label>
    <input id="nome" class="w-full p-1 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" type="text"
      id="nome" name="nome" required>

    <label class="block mt-3 text-gray-600" for="email">Email:*</label>
    <input id="email" class="w-full p-1 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" type="email"
      id="email" name="email" required>

    <label class="block mt-3 text-gray-600" for="celular">Celular:*</label>
    <input id="celular" class="w-full p-1 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" type="tel"
      id="celular" name="celular" pattern="[0-9]{11}" placeholder="Apenas números" required>

    <label class="block mt-3 text-gray-600" for="setor">Setor:*</label>
    <select id="setor" class="w-full p-1 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" id="setor"
      name="setor" required>
      <option value="" disabled selected>Selecione um setor</option>
      <option value="suporte">Suporte</option>
      <option value="financeiro">Financeiro</option>
      <option value="vendas">Vendas</option>
    </select>

    <label class="block mt-3 text-gray-600" for="mensagem">Mensagem</label>
    <textarea id="mensagem" class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
      id="mensagem" name="mensagem" rows="4" required></textarea>

    <button class="mt-3 w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600 transition"
      type="submit">Enviar</button>
  </form>
</section>

<script>
  document.getElementById("form").addEventListener("submit", function (event) {
    event.preventDefault();

    let formData = {
      nome: document.getElementById("nome").value,
      email: document.getElementById("email").value,
      celular: document.getElementById("celular").value,
      setor: document.getElementById("setor").value,
      mensagem: document.getElementById("mensagem").value
    };

    console.log(formData)

    fetch("https://node-api-contatos.onrender.com/contatos", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(formData)
    })
      .then(response => response.json())
      .then(data => alert(data.success ? "Enviado com sucesso!" : "Erro ao enviar!"))
      .catch(error => console.error("Erro:", error));
  });
</script>