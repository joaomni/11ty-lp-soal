<script>
	window.addEventListener('scroll', () => {
		const menu = document.getElementById('menu-projetos')
		const logo = document.getElementById('logo')
		const instagram = document.getElementById('instagram')
		const linkedin = document.getElementById('linkedin')
		const scrollY = window.scrollY
		const sectionHeight = window.innerHeight

		if (scrollY < sectionHeight) {
			// Primeira lâmina → Texto branco, ícones brancos, logo branca
			menu.classList.add('bg-[#CCCDC8]')
			menu.classList.remove('text-white', 'text-black')
			menu.classList.add('text-[#032d59]')
			instagram.setAttribute('fill', '#032d59') // Azul correto
			linkedin.setAttribute('stroke', '#032d59')
			logo.classList.remove('logo-white', 'logo-black')
			logo.classList.add('logo-blue')
			menu.style.opacity = '1'
		} else if (scrollY >= sectionHeight && scrollY < sectionHeight * 3) {
			// Segunda e terceira lâmina → Texto azul, ícones azul, logo azul
			menu.classList.remove('text-white', 'text-black')
			menu.classList.add('text-[#032d59]')
			menu.classList.add('bg-[#CCCDC8]')
			instagram.setAttribute('fill', '#032d59') // Azul correto
			linkedin.setAttribute('stroke', '#032d59')
			logo.classList.remove('logo-white', 'logo-black')
			logo.classList.add('logo-blue')
			menu.style.opacity = '1'
		} else if (scrollY >= sectionHeight * 3 && scrollY < sectionHeight * 4) {
			// Quarta lâmina → Texto branco, ícones brancos, logo branca
			menu.classList.remove('text-white', 'text-black')
			menu.classList.add('text-[#032d59]')
			menu.classList.add('bg-[#CCCDC8]')
			instagram.setAttribute('fill', '#032d59') // Azul correto
			linkedin.setAttribute('stroke', '#032d59')
			logo.classList.remove('logo-white', 'logo-black')
			logo.classList.add('logo-blue')
			menu.style.opacity = '1'
		} else if (scrollY >= sectionHeight * 4) {
			// Quinta lâmina → Menu some
			menu.style.opacity = '0'
		}
	})
</script>
